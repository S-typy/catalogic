# Catalogic STEP1 environment example
# Copy to .env and edit values for your server.

# Git repository reference
CATALOGIC_REPO_URL=https://github.com/S-typy/catalogic

# Backend
CATALOGIC_HOST=0.0.0.0
CATALOGIC_PORT=8080

# Frontend
CATALOGIC_FRONTEND_HOST=0.0.0.0
CATALOGIC_FRONTEND_PORT=8081

# Public API URL used by frontend
# Example: http://192.168.1.20:8080
CATALOGIC_API_BASE=http://127.0.0.1:8080

# Root directory visible in server-side directory picker
CATALOGIC_BROWSE_ROOT=/

# Storage
CATALOGIC_DB_PATH=./data/catalogic.db

# Install/service runtime
VENV_PATH=./.venv
CATALOGIC_SERVICE_USER=
