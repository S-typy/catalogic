# Catalogic STEP1 environment example
# Copy to .env and edit values for your server.

# Git repository reference
CATALOGIC_REPO_URL=https://github.com/S-typy/catalogic

# Backend
CATALOGIC_HOST=0.0.0.0
CATALOGIC_PORT=8080

# Frontend
CATALOGIC_FRONTEND_HOST=0.0.0.0
CATALOGIC_FRONTEND_PORT=8081

# Public API URL used by frontend
# Example: http://192.168.1.20:8080
CATALOGIC_API_BASE=http://127.0.0.1:8080

# Root directory visible in server-side directory picker
CATALOGIC_BROWSE_ROOT=/

# Storage
CATALOGIC_DB_PATH=./data/catalogic.db

# Logging (backend)
CATALOGIC_LOG_LEVEL=INFO
CATALOGIC_LOG_JSON=0
# Example: /opt/apps/catalogic/logs/backend.log
CATALOGIC_BACKEND_LOG_FILE=
CATALOGIC_LOG_MAX_BYTES=10485760
CATALOGIC_LOG_BACKUP_COUNT=5

# Video preview resource limits (backend ffmpeg)
CATALOGIC_PREVIEW_MAX_PROCS=2
CATALOGIC_PREVIEW_FFMPEG_THREADS=1
# Transcoded preview segment duration and ffmpeg timeout
CATALOGIC_PREVIEW_SEGMENT_SEC=12
CATALOGIC_PREVIEW_TRANSCODE_TIMEOUT_SEC=120

# Scanner performance parameters are stored in DB and changed via UI:
# Settings -> "Производительность сканера" / "Scanner Performance"

# Install/service runtime
VENV_PATH=./.venv
CATALOGIC_SERVICE_USER=
